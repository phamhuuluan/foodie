<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#000"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    <ImageView
                        android:id="@+id/im_food"
                        android:src="@drawable/bg_do_an"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:drawableLeft="@drawable/like"
                        android:layout_width="70dp"
                        android:layout_height="36dp"
                        android:textSize="11sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dip"
                        android:background="@color/design_default_color_error"
                        android:padding="12dip"
                        android:textStyle="bold"
                        android:text="   Like"
                        android:textColor="#ffffffff" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_food_name"
                    android:drawableLeft="@drawable/shield"
                    android:layout_marginLeft="8dp"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="  Cơm Gà Giòn Booby - Phú Đô"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_food_address"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:text="129 Ngõ 8 Lê Quang Đạo (Tổ 1 Phú Đô), Nam Từ Liêm, Hà Nội"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:text="4.7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:layout_marginLeft="90dp"
                        android:id="@+id/tv_food_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4500.000 Đ"
                        android:textColor="#E8BF0C"
                        android:textSize="16sp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_food"
                        android:hint="Số lượng"
                        android:textColor="#FA0202"
                        android:inputType="number"
                        android:textSize="10sp"></EditText>

                    <Button
                        android:id="@+id/btn_addcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:background="#FA0202"
                        android:drawableLeft="@drawable/ic_baseline_add_24"
                        android:drawableBottom="2dp"
                        android:drawablePadding="8dp"
                        android:text="Add"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>